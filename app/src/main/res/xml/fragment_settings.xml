<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications" />

        <Preference
            app:key="pairDevice"
            app:summary="No devices connected"
            app:title="Devices" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="misc_category"
        app:title="Miscellaneous">

        <Preference
            app:key="manage_permissions"
            app:title="Manage permissions" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback" />

        <Preference
            app:key="about"
            app:summary="Licenses, descriptions and more!"
            app:title="About the app" />

        <Preference
            app:key="version"
            app:summary="-"
            app:title="App Version" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>